@model QuanLiWeb.Models.Phim

@{
    ViewBag.Title = "ThemMoi";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Thêm Mới</h2>

@using (Html.BeginForm("ThemMoi", "QuanLiPhim", FormMethod.Post, new { @enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Phim</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           Tên phim
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenPhim, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenPhim, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Link ảnh
            <div class="col-md-10">
                <input type="file" name="fileUpload">
                @Html.ValidationMessageFor(model => model.TenAnh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Nội dung
            <div class="col-md-10">
                @Html.EditorFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Diễn viên
            <div class="col-md-10">
                @Html.EditorFor(model => model.DienVien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DienVien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Video
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.LinkVideo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LinkVideo, "", new { @class = "text-danger" })*@
                <input type="file" name="fileUpload">
            </div>
        </div>

        <div class="form-group">
            Thể loại
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaTheLoai,new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaTheLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Điểm phim
            <div class="col-md-10">
                @Html.EditorFor(model => model.diemphim, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.diemphim, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <br/>
                <input type="submit" value="Thêm mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Trở về", "HienThiDS")
</div>
