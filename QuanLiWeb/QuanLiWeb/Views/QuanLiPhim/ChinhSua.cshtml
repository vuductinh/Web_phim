@model QuanLiWeb.Models.Phim
@{
    ViewBag.Title = "ChinhSua";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<h2>Chỉnh Sửa</h2>
@using (Html.BeginForm("ChinhSua", "QuanLiPhim", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Phim</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Mã Phim
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaPhim, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaPhim, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tên phim
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenPhim, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenPhim, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Ảnh
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenAnh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenAnh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Nội dung
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Diễn viên
            <div class="col-md-10">
                @Html.EditorFor(model => model.DienVien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DienVien, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Video
            <div class="col-md-10">
                @Html.EditorFor(model => model.LinkVideo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LinkVideo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Thể loại
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TheLoai.TenTheLoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TheLoai.TenTheLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Điểm phim
            <div class="col-md-10">
                @Html.EditorFor(model => model.diemphim, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.diemphim, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <br/>
                <input type="submit" value="Thay Đổi" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    <br/>
    @Html.ActionLink("Trở về", "HienThiDS")
</div>
